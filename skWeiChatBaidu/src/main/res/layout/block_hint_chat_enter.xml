<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llHideChatEnter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/bg_search_result_block"
    android:divider="@drawable/common_divider"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tvPrivateMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_weight="1"
        android:text="@string/gain_hide_conversation_enter"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:background="@mipmap/right_arrow_icon"
        android:contentDescription="@string/app_name" />

</LinearLayout>
