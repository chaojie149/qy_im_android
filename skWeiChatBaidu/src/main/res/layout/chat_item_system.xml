<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:gravity="center"
    android:paddingLeft="@dimen/dp40"
    android:paddingTop="10dp"
    android:paddingRight="@dimen/dp40"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_red"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:padding="1dp"
            android:src="@drawable/red_icon" />

        <TextView
            android:id="@+id/chat_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tip_drawable"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="@string/system_message"
            android:textColor="@color/system_default_text_color"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>