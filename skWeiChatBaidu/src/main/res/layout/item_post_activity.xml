<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10"
    android:descendantFocusability="afterDescendants">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sdv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp" />

    <com.tongxin.caihong.view.SquareCenterFrameLayout
        android:id="@+id/add_sc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_add_item_default_bg" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle_add_float_view_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/public_message_image_add" />

        </FrameLayout>

    </com.tongxin.caihong.view.SquareCenterFrameLayout>

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="3dp"
        android:padding="2dp"
        android:src="@mipmap/public_message_image_remove" />

</FrameLayout>