<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.tongxin.caihong.view.SwitchButtonText
        android:id="@+id/sbDanmaku"
        style="@style/IMTbleLine_ArrowBtn"
        app:sb_background="@color/app_white"
        app:sb_checked_color="@color/main_color"
        app:sb_effect_duration="100"
        app:sb_shadow_radius="4dp"
        app:sb_show_indicator="false" />

    <com.tongxin.caihong.view.InputLimitEditText
        android:id="@+id/etComment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:background="@null"
        android:ellipsize="end"
        android:maxLength="100"
        android:hint="@string/leave_you_comment"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15_text_size" />

    <ImageView
        android:id="@+id/ivSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_screen_old"
        android:src="@mipmap/ic_live_send_msg" />

</LinearLayout>
