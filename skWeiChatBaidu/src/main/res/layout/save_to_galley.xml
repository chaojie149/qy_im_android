<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTargetChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/target_chat"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_list_item_text_size"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/v0"
        style="@style/View_Line"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_send_to_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/send_to_friend"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_list_item_text_size" />

    <View
        android:id="@+id/v1"
        style="@style/View_Line" />

    <TextView
        android:id="@+id/tv_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/chat_collection"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_list_item_text_size" />

    <View
        android:id="@+id/v2"
        style="@style/View_Line" />

    <TextView
        android:id="@+id/save_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/save_image"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_list_item_text_size" />

    <View style="@style/View_Line" />

    <TextView
        android:id="@+id/edit_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/edit"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_list_item_text_size" />

    <View style="@style/View_Line" />

    <TextView
        android:id="@+id/identification_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/scan_qr_code"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_list_item_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/whitesmoke" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/cancel"
        android:textColor="@color/gray"
        android:textSize="@dimen/dialog_list_item_text_size" />

</LinearLayout>