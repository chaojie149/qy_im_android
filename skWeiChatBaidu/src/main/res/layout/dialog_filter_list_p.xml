<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_picture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_filter_select"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="11dp"
        android:paddingTop="@dimen/margin_screen_old"
        android:paddingEnd="11dp"
        android:paddingBottom="@dimen/margin_screen_old" />

    <LinearLayout
        android:id="@+id/ll_seekbar_beauty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_screen_old"
        android:visibility="gone">

        <include
            android:id="@+id/layout_facesurgery"
            layout="@layout/face_surgery_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <View style="@style/View_Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/video_filter"
            android:textColor="@color/white" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="14dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/tv_beauty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/video_beauty"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>