<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/a_bg_for_payment"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_screen_old"
    android:paddingTop="10dp"
    android:paddingEnd="@dimen/margin_screen_old"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="260dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15_text_size"
            android:textStyle="bold"
            tools:text="同事同事同事同事同事同事同事同事同事同事同事" />

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_value"
            android:textSize="@dimen/sp_12_text_size"
            android:textStyle="bold"
            tools:text="(99)" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvUsersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_value"
        android:textSize="@dimen/sp_13_text_size"
        tools:text="张金龙、刘芳芳、王丽丽、赵晨晨、钱多多、孙晓晓..." />

</LinearLayout>