<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tongxin.caihong.ui.me.redpacket.PaymentCenterActivity">

    <include layout="@layout/a_view_actionbar" />

    <RelativeLayout
        android:id="@+id/bill"
        style="@style/IMTbleLine"
        android:layout_marginTop="9dp">

        <TextView
            style="@style/IMTbleLine_TextKey"
            android:text="@string/bill" />

        <TextView
            style="@style/IMTbleLine_TextValue"
            android:visibility="gone" />

        <ImageView
            style="@style/IMTbleLine_ArrowImg"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_password"
        style="@style/IMTbleLine">

        <View style="@style/View_Line" />

        <TextView
            android:id="@+id/cache_text"
            style="@style/IMTbleLine_TextKey"
            android:text="@string/hint_password" />

        <TextView
            android:id="@+id/cache_tv"
            style="@style/IMTbleLine_TextValue"
            android:layout_toLeftOf="@+id/cache_arrow_img"
            android:layout_toRightOf="@+id/cache_text"
            android:textColor="@color/dark_dark_grey"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/cache_arrow_img"
            style="@style/IMTbleLine_ArrowImg"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reset_password"
        style="@style/IMTbleLine">

        <View style="@style/View_Line" />

        <TextView
            android:id="@+id/reset_password_text"
            style="@style/IMTbleLine_TextKey"
            android:text="@string/forget_password" />

        <TextView
            android:id="@+id/reset_password_tv"
            style="@style/IMTbleLine_TextValue"
            android:layout_toLeftOf="@+id/reset_password_arrow_img"
            android:layout_toRightOf="@+id/reset_password_text"
            android:textColor="@color/dark_dark_grey"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/reset_password_arrow_img"
            style="@style/IMTbleLine_ArrowImg"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

</LinearLayout>