<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/white"    android:orientation="vertical">    <TextView        android:id="@+id/no_gag"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/list_selector_background_ripple"        android:gravity="center"        android:paddingTop="12dp"        android:paddingBottom="12dp"        android:text="@string/msg_transmission_public"        android:textColor="@color/black"        android:textSize="@dimen/dialog_list_item_text_size" />    <TextView        android:id="@+id/one_gag"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/list_selector_background_ripple"        android:gravity="center"        android:paddingTop="12dp"        android:paddingBottom="12dp"        android:text="@string/msg_transmission_desed"        android:textColor="@color/black"        android:textSize="@dimen/dialog_list_item_text_size" />    <TextView        android:id="@+id/two_gag"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/list_selector_background_ripple"        android:gravity="center"        android:paddingTop="12dp"        android:paddingBottom="12dp"        android:text="@string/msg_transmission_aes"        android:textColor="@color/black"        android:textSize="@dimen/dialog_list_item_text_size" />    <TextView        android:id="@+id/three_gag"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/list_selector_background_ripple"        android:gravity="center"        android:paddingTop="12dp"        android:paddingBottom="12dp"        android:text="@string/msg_transmission_asymmetric_aes"        android:textColor="@color/black"        android:textSize="@dimen/dialog_list_item_text_size" />    <View        android:layout_width="match_parent"        android:layout_height="5dp"        android:background="@color/whitesmoke" />    <TextView        android:id="@+id/tvCancel"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/list_selector_background_ripple"        android:gravity="center"        android:paddingTop="12dp"        android:paddingBottom="12dp"        android:text="@string/cancel"        android:textColor="@color/gray"        android:textSize="@dimen/dialog_list_item_text_size" /></LinearLayout>