<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/vCutoutHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vCutoutHolder">

    </WebView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_screen_old"
        android:background="@drawable/applet_toolbar_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/applet_toolbar_menu"
            android:tint="@color/white" />

        <View
            style="@style/View_Line_Vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="#26000000" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/applet_toolbar_close"
            android:tint="@color/white" />
    </LinearLayout>
</RelativeLayout>
