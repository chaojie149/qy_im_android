<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_verify_dialog"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_screen_old"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_16_text_size"
        android:textStyle="bold"
        tools:text="快速回复" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14_text_size"
            tools:text="@string/tip_reason_invite_friends" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/verify_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/et_verify_bg"
                android:ellipsize="middle"
                android:hint=""
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minHeight="40dp"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="10dp"
                android:paddingBottom="7dp"
                android:textColor="@color/black"
                android:textColorHint="#FFBBBBBB"
                android:textSize="@dimen/sp_12_text_size"
                tools:text="sdfsdfsgasfcvqaegcxafdxscsagsaascdasgcs csdfasgbasdcsdfasdgasdcsdagas" />

            <ToggleButton
                android:id="@+id/tbEye"
                style="@style/PasswordEye"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:visibility="gone"
                tools:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/View_Line"
        android:layout_height="1dp"
        android:background="#FFF8F8F8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="@string/cancel"
            android:textColor="#FF6B6B6B"
            android:textSize="@dimen/sp_14_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFF8F8F8" />

        <TextView
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="@string/send"
            android:textColor="@color/button_text"
            android:textSize="@dimen/sp_14_text_size" />

    </LinearLayout>

</LinearLayout>