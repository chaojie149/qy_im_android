<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingStart="@dimen/margin_screen_old"
        android:paddingBottom="9dp">

        <LinearLayout
            android:id="@+id/new_friend_rl"
            style="@style/ContactsGridItem">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contacts_head_image_size">

                <com.tongxin.caihong.view.CircleImageView
                    android:id="@+id/new_friend"
                    android:layout_width="@dimen/contacts_head_image_size"
                    android:layout_height="@dimen/contacts_head_image_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/friend_avatar_new" />

                <TextView
                    android:id="@+id/num_tv"
                    style="@style/dotNumberRed"
                    android:layout_alignEnd="@+id/new_friend"
                    android:layout_alignRight="@+id/new_friend"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="-10dp"
                    android:layout_marginRight="-10dp"
                    android:visibility="gone"
                    tools:text="2"
                    tools:visibility="visible" />

            </RelativeLayout>

            <TextView
                style="@style/ContactsGridItemText"
                android:text="@string/new_friend" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notice_rl"
            style="@style/ContactsGridItem">

            <com.tongxin.caihong.view.CircleImageView
                android:id="@+id/notice_number"
                android:layout_width="@dimen/contacts_head_image_size"
                android:layout_height="@dimen/contacts_head_image_size"
                android:background="@mipmap/friend_avatar_number" />

            <TextView
                style="@style/ContactsGridItemText"
                android:text="@string/service_number" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/device_rl"
            style="@style/ContactsGridItem">

            <com.tongxin.caihong.view.CircleImageView
                android:id="@+id/device_iv"
                android:layout_width="@dimen/contacts_head_image_size"
                android:layout_height="@dimen/contacts_head_image_size"
                android:background="@mipmap/friend_avatar_device" />

            <TextView
                style="@style/ContactsGridItemText"
                android:text="@string/my_device" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/label_rl"
            style="@style/ContactsGridItem">

            <com.tongxin.caihong.view.CircleImageView
                android:id="@+id/label"
                android:layout_width="@dimen/contacts_head_image_size"
                android:layout_height="@dimen/contacts_head_image_size"
                android:background="@mipmap/friend_avatar_new_label" />

            <TextView
                style="@style/ContactsGridItemText"
                android:text="@string/tag" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>