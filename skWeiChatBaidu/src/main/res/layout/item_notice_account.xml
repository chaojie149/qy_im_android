<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_screen_old"
        android:paddingTop="9dp"
        android:paddingEnd="@dimen/margin_screen_old"
        android:paddingBottom="9dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivHead"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:riv_oval="true"
            tools:src="@drawable/welcome_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@+id/tvTime"
            android:layout_toEndOf="@+id/ivHead"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="@string/example_name" />

            <TextView
                android:id="@+id/tvDisc"
                android:layout_width="218dp"
                android:layout_height="18dp"
                android:layout_marginTop="6dp"
                android:textColor="#ff9d9fa7"
                android:textSize="13sp"
                tools:text="生活需要仪式感，生活需要小惊喜的..." />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:textColor="#ff9d9fa7"
            android:textSize="11sp"
            tools:ignore="SmallSp"
            tools:text="04-07 14:20" />

    </RelativeLayout>

</LinearLayout>
