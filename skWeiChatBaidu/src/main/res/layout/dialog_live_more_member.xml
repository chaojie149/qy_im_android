<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/live_common_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/margin_screen_old"
        android:paddingBottom="@dimen/margin_screen_old"
        android:text="@string/mall_live_online_audience"
        android:textColor="#FF111111"
        android:textSize="@dimen/sp_16_text_size"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF8F8F8"
        android:paddingStart="@dimen/margin_screen_old"
        android:paddingTop="5dp"
        android:paddingEnd="@dimen/margin_screen_old"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mall_live_audience_info"
            android:textColor="@color/text_value"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/mall_live_reward_diamonds"
            android:textColor="@color/text_value"
            android:textSize="10sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lvMember"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/white"
        tools:listitem="@layout/item_vertical_menber" />

</LinearLayout>